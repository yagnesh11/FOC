#include<stdio.h>
int main()
{
	int i,n,sum1=0,sum2=0,sum=0;
	printf("Enter the number:");
	scanf("%d",&n);
	
	for(i=1;i<=n;i++)
	{
		if(i%2==1)
		{
			sum1 = sum1 + i;
		}
	}
	
	for(i=1;i<=n;i++)
	{
		if(i%2==0)
		{
			sum2 = sum2 + i;
		}
	}
	
	sum = sum1-sum2;
	
	printf("sum of the series :%d",sum);
}
